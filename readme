def add_port_mapping(p_url, p_service, internal_client, internal_port, external_port, protocol, description):
    payload = ('<?xml version="1.0" encoding="utf-8" standalone="yes"?' +
               '<s:Envelope s:encodingStyle="http://schemas.xmlsoap.org/soap/encoding/" xmlns:s="http://schemas.xmlsoap.org/soap/envelope/">' +
               '<s:Body>' +
               '<u:AddPortMapping xmlns:u="' + p_service + '">' +
               '<NewRemoteHost></NewRemoteHost>' +
               '<NewExternalPort>' + str(external_port) + '</NewExternalPort>' +
               '<NewProtocol>' + protocol + '</NewProtocol>' +
               '<NewInternalPort>' + str(internal_port) + '</NewInternalPort>' +
               '<NewInternalClient>' + internal_client + '</NewInternalClient>' +
               '<NewEnabled>1</NewEnabled>' +
               '<NewPortMappingDescription>' + description + '</NewPortMappingDescription>' +
               '<NewLeaseDuration>0</NewLeaseDuration>' +
               '</u:AddPortMapping>' +
               '</s:Body>' +
               '</s:Envelope>')

    soapActionHeader = { 'Soapaction' : '"' + p_service + '#AddPortMapping' + '"',
                         'Content-type' : 'text/xml;charset="utf-8"' }
    resp = requests.post(p_url, data=payload, headers=soapActionHeader)

    if resp.status_code != 200:
        print('\t[-] Failed to add port mapping. Status code: %d' % resp.status_code)
    else:
        print('\t[+] Port mapping added successfully: External Port %d => Internal Port %d' % (external_port, internal_port))

# To add a port forwarding rule, call the add_port_mapping function with the necessary parameters.
# Example:
# add_port_mapping("http://192.168.1.1:32863/ctl/IPConn", "urn:schemas-upnp-org:service:WANIPConnection:2",
#                  "192.168.1.100", 80, 8080, "TCP", "My Web Server")
